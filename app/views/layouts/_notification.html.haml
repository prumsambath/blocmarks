- if flash[:notice]
  .alert.alert-success
    %button.close{"data-dismiss" => "alert", :type => "button"} &times;
    = flash[:notice]
- elsif flash[:error]
  .alert.alert-danger
    %button.close{"data-dismiss" => "alert", :type => "button"} &times;
    = flash[:error]
- elsif flash[:alert]
  .alert.alert-warning
    %button.close{"data-dismiss" => "alert", :type => "button"} &times;
    = flash[:alert]
