- if current_user && !current_user.own?(bookmark)
  %span{id: "favorite-button-#{bookmark.id}"}
    - if liked = current_user.liked(bookmark)
      = link_to 'Unlike', [bookmark, liked], method: :delete, class: 'btn btn-default btn-xs', remote: true
    - else
      = link_to 'Like', [bookmark, Favorite.new], method: :post, class: 'btn btn-default btn-xs', remote: true
